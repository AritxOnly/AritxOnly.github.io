---
import IconRss from '~/icons/rss.svg'
import IconGithub from '~/icons/github.svg'
import IconBilibili from '~/icons/bilibili.svg'
import type { SocialLinks } from '~/types'
import { Image } from 'astro:assets'

interface Friend {
  name: string
  site?: string
  avatar?: string
  bio?: string
  tags?: string[]
  rss?: string | null
  social?: SocialLinks
  since?: string
  reciprocal?: boolean
  note?: string
}

interface Props {
  friend: Friend
}

const { friend } = Astro.props
---

<article
  class="relative group flex h-full flex-col justify-between rounded-2xl border border-accent p-4 hover:bg-accent/5 transition"
>
  <div>
    {friend.avatar && (
      <div
        class="not-prose relative w-2/5 rounded-full border-6 border-accent/20 overflow-hidden"
        style="aspect-ratio: 1 / 1;"
      >
        {/* 绝对定位，四边贴紧容器 */}
        <img
          src={friend.avatar}
          alt={friend.name}
          loading="lazy"
          class="absolute inset-0 block w-full h-full object-cover object-center m-0 p-0"
        />
      </div>
    )}

    <div class="flex items-center justify-between gap-3">
      <h3 class="text-lg font-semibold">{friend.name}</h3>
      {friend.reciprocal && (
        <span class="text-xs rounded-full border border-[var(--ec-border)] px-2 py-0.5 text-[var(--ec-foreground-muted)]">
          互加友链
        </span>
      )}
    </div>

    {friend.bio && (
      <p class="mt-1 text-[var(--ec-foreground-muted)]">{friend.bio}</p>
    )}

    {friend.tags && friend.tags.length > 0 && (
      <div class="mt-2 flex flex-wrap gap-1.5 text-xs text-[var(--ec-foreground-muted)]">
        {friend.tags.map((t) => (
          <span class="px-2 py-0.5 rounded-full border border-[var(--ec-border)]">{t}</span>
        ))}
      </div>
    )}
  </div>

  <div class="mt-3 flex items-center gap-2">
    <!-- 官网 -->
    {friend.site && (
      <a href={friend.site} target="_blank" rel="noopener"
       class="inline-flex items-center gap-1 rounded-xl border border-[var(--ec-border)] px-2.5 py-1.5 text-sm
              hover:bg-accent/10 text-accent transition">
        访问
      </a>
    )}

    <!-- RSS -->
    {friend.rss && (
      <a href={friend.rss} target="_blank" rel="noopener"
         class="social-link inline-flex items-center gap-1 rounded-xl border border-[var(--ec-border)] px-2.5 py-1.5
                hover:bg-accent/10 transition" aria-label="RSS">
        <IconRss class="size-5" />
        <span class="text-sm">RSS</span>
      </a>
    )}

    <!-- 社交 -->
    <div class="ml-auto flex items-center gap-2">
      {friend.social?.github && (
        <a href={friend.social.github} target="_blank" rel="noopener" class="social-link" aria-label="GitHub">
          <IconGithub class="size-6" />
        </a>
      )}
      {friend.social?.bilibili && (
        <a href={friend.social.bilibili} target="_blank" rel="noopener" class="social-link" aria-label="Bilibili">
          <IconBilibili class="size-6" />
        </a>
      )}
    </div>
  </div>
</article>

<style>
  /* 仅作用于这个组件：把本组件卡片内的 img 高度强制 100% */
  article img { height: 100% !important; width: 100% !important; border: 0; }
</style>