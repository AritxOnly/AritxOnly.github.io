---
import type { SocialLinks } from '~/types'
import IconGithub from '~/icons/github.svg'
import IconMastodon from '~/icons/mastodon.svg'
import IconTwitter from '~/icons/twitter.svg'
import IconLinkedin from '~/icons/linkedin.svg'
import IconBluesky from '~/icons/bluesky.svg'
import IconEmail from '~/icons/email.svg'
import IconRss from '~/icons/rss.svg'
import IconBilibili from '~/icons/bilibili.svg'
import IconNetease from '~/icons/netease.svg'
import IconSoundcloud from '~/icons/soundcloud.svg'
import IconCoolapk from '~/icons/coolapk.svg'

interface Props {
  socialLinks: SocialLinks
}

const { socialLinks } = Astro.props
---

<div class="flex w-full max-w-md items-center justify-between">
  {
    socialLinks.github && (
      <a
        href={socialLinks.github}
        target="_blank"
        rel="noopener noreferrer"
        class="social-link"
      >
        <span class="sr-only">GitHub</span>
        <IconGithub class="size-7" />
      </a>
    )
  }
  {
    socialLinks.mastodon && (
      <a
        href={socialLinks.mastodon}
        target="_blank"
        rel="noopener noreferrer"
        class="social-link"
      >
        <span class="sr-only">Mastodon</span>
        <IconMastodon class="size-7" />
      </a>
    )
  }
  {
    socialLinks.twitter && (
      <a
        href={socialLinks.twitter}
        target="_blank"
        rel="noopener noreferrer"
        class="social-link"
      >
        <span class="sr-only">Twitter</span>
        <IconTwitter class="size-7" />
      </a>
    )
  }
  {
    socialLinks.linkedin && (
      <a
        href={socialLinks.linkedin}
        target="_blank"
        rel="noopener noreferrer"
        class="social-link"
      >
        <span class="sr-only">LinkedIn</span>
        <IconLinkedin class="size-7" />
      </a>
    )
  }
  {
    socialLinks.bluesky && (
      <a
        href={socialLinks.bluesky}
        target="_blank"
        rel="noopener noreferrer"
        class="social-link"
      >
        <span class="sr-only">Bluesky</span>
        <IconBluesky class="size-7" />
      </a>
    )
  }
  {
    socialLinks.bilibili && (
      <a
        href={socialLinks.bilibili}
        target="_blank"
        rel="noopener noreferrer"
        class="social-link"
      >
        <span class="sr-only">Bilibili</span>
        <IconBilibili class="size-7" />
      </a>
    )
  }
  {
    socialLinks.netease && (
      <a
        href={socialLinks.netease}
        target="_blank"
        rel="noopener noreferrer"
        class="social-link"
      >
        <span class="sr-only">Netease Cloud Music</span>
        <IconNetease class="size-7" />
      </a>
    )
  }
  {
    socialLinks.soundcloud && (
      <a
        href={socialLinks.soundcloud}
        target="_blank"
        rel="noopener noreferrer"
        class="social-link"
      >
        <span class="sr-only">SoundCloud</span>
        <IconSoundcloud class="size-7" />
      </a>
    )
  }
  {
    socialLinks.coolapk && (
      <a
        href={socialLinks.coolapk}
        target="_blank"
        rel="noopener noreferrer"
        class="social-link"
      >
        <span class="sr-only">Coolapk</span>
        <IconCoolapk class="size-7" />
      </a>
    )
  }
  {
    socialLinks.email && (
      <a
        href={`mailto:${socialLinks.email}`}
        target="_blank"
        rel="noopener noreferrer"
        class="social-link"
      >
        <span class="sr-only">Email</span>
        <IconEmail class="size-7" />
      </a>
    )
  }
  {
    socialLinks.rss && (
      <a href="/rss.xml" class="social-link">
        <span class="sr-only">RSS</span>
        <IconRss class="size-7" />
      </a>
    )
  }
</div>
